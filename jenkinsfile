pipeline {
    agent any

        stages {
            stage('Clean Previous Containers') {
                steps {
                    sh 'docker-compose down || true'
                }
            }

        stage('Build Application') {
            steps {
                sh 'docker-compose build app'
            }
        }
        stage('Start Application') {
            steps {
                sh 'docker-compose up -d app'
                // Esperar a que la aplicación esté lista usando el nombre del servicio
                sh '''
                    timeout 120s bash -c '
                        while ! docker-compose exec -T app curl -f http://localhost:5050/login; do
                            sleep 5
                            echo "Esperando a que la aplicación esté lista..."
                        done
                    '
                '''
            }
        }

        stage('Run Cypress Tests') {
           steps {
                // Verificar conectividad antes de ejecutar las pruebas
                sh 'docker-compose exec cypress curl -f http://app:5050/login || echo "Verificando conectividad..."'
                sh 'docker-compose run --rm cypress'
            }
        }

        stage('Cleanup') {
            steps {
                sh 'docker-compose down'
            }
        }
    }

    post {
        always {
            publishHTML target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'mochawesome-report',
                reportFiles: 'mochawesome.html',
                reportName: 'Cypress Test Report'
            ]
        }
    }
}